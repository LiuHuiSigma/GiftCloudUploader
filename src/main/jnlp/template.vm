<?xml version="1.0" encoding="utf-8"?>
<!-- JNLP File for GIFT-Cloud Uploader -->
<jnlp
  codebase="$project.Url/uploader/"
  href="$outputFile">
  <information os="Linux">
    <title>$project.name</title>
    <vendor>$project.Organization.Name</vendor>
    <homepage href="doc/manual.pdf"/>
    <description>$project.Description</description>
    <description kind="short">An application to query, retrieve, import, de-identify DICOM instances and upload them securely on to GIFT-Cloud.</description>
    <icon href="res/icon256.png"/>
    <icon kind="shortcut" href="res/icon256.png"/>
    <icon kind="splash" href="res/splash.png"/>
    <offline-allowed/>
    <shortcut online="true" install="true">
      <desktop/>
      <menu submenu="GIFT-Surg"/>
    </shortcut>
  </information>
  <information os="Windows">
    <title>$project.name</title>
    <vendor>$project.Organization.Name</vendor>
    <homepage href="doc/manual.pdf"/>
    <description>$project.Description</description>
    <description kind="short">An application to query, retrieve, import, de-identify DICOM instances and upload them securely on to GIFT-Cloud.</description>
    <icon href="res/icon256.png"/>
    <icon kind="shortcut" href="res/icon256.png"/>
    <icon kind="splash" href="res/splash.png"/>
    <offline-allowed/>
    <shortcut online="true" install="true">
      <desktop/>
      <menu submenu="GIFT-Surg"/>
    </shortcut>
    </information>
  <information os="Mac">
    <title>$project.name</title>
    <vendor>$project.Organization.Name</vendor>
    <homepage href="doc/manual.pdf"/>
    <description>$project.Description</description>
    <description kind="short">An application to query, retrieve, import, de-identify DICOM instances and upload them securely on to GIFT-Cloud.</description>
    <icon href="res/icon256.png"/>
    <icon kind="shortcut" href="res/icon256.png"/>
    <icon kind="splash" href="res/splash.png"/>
    <offline-allowed/>
    <shortcut online="true" install="true">
      <desktop/>
      <menu submenu="GIFT-Surg"/>
    </shortcut>
  </information>
  <update check="always" policy="prompt-update" />
  <security>
      <all-permissions/>
  </security>
  <resources>
    <j2se version="1.6+" java-vm-args="-Xmx768m"/>
	$dependencies
  </resources>
  <application-desc main-class="$mainClass"/>
</jnlp>
