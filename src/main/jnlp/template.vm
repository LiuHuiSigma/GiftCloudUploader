<?xml version="1.0" encoding="utf-8"?>
<!-- JNLP File for GIFT-Cloud Uploader -->
<jnlp
  codebase="$project.Url/uploader/"
  href="$outputFile">
  <information os="Mac">
    <title>$project.name</title>
    <vendor>$project.Organization.Name</vendor>
    <homepage href="doc/manual.pdf"/>
    <description>$project.Description</description>
    <description kind="short">Uploads data to a GIFT-Cloud server</description>
    <icon kind="splash" href="res/gssplash.png"/>
	<icon href="res/gs.icns"/>
	<icon kind="shortcut" href="res/gs.icns"/>
    <offline-allowed/>
    <shortcut online="true" install="true">
      <desktop/>
      <menu submenu="GIFT-Surg"/>
    </shortcut>
  </information>
  <information os="Win">
    <title>$project.name</title>
    <vendor>$project.Organization.Name</vendor>
    <homepage href="doc/manual.pdf"/>
    <description>$project.Description</description>
    <description kind="short">Uploads data to a GIFT-Cloud server</description>
    <icon kind="splash" href="res/gssplash.png"/>
	<icon href="res/gs.ico"/>
	<icon kind="shortcut" href="res/gs.ico"/>
    <offline-allowed/>
    <shortcut online="true" install="true">
      <desktop/>
      <menu submenu="GIFT-Surg"/>
    </shortcut>
  </information>
  <information os="Linux">
    <title>$project.name</title>
    <vendor>$project.Organization.Name</vendor>
    <homepage href="doc/manual.pdf"/>
    <description>$project.Description</description>
    <description kind="short">Uploads data to a GIFT-Cloud server</description>
    <icon kind="splash" href="res/gssplash.png"/>
	<icon href="res/gs.ico"/>
	<icon kind="shortcut" href="res/gs.ico"/>
    <offline-allowed/>
    <shortcut online="true" install="true">
      <desktop/>
      <menu submenu="GIFT-Surg"/>
    </shortcut>
  </information>
  <update check="always" policy="prompt-update" />
  <security>
      <all-permissions/>
  </security>
  <resources>
    <j2se version="1.6+" java-vm-args="-Xmx2048m"/>
	$dependencies
  </resources>
  <application-desc main-class="$mainClass"/>
</jnlp>
